@model BookStoreMVC.Models.ViewModels.BlogIndexViewModel
@{
    var pageTitle = ViewBag.PageTitle as string ?? "Blog BookVerse";
    var pageDescription = ViewBag.MetaDescription as string
        ?? "Cập nhật những câu chuyện truyền cảm hứng và mẹo đọc sách thú vị mỗi ngày.";
    ViewData["Title"] = pageTitle;
}

@section Styles {
    <style>
        .blog-hero {
            background: radial-gradient(circle at top left, rgba(59, 130, 246, 0.18), transparent 55%),
                        radial-gradient(circle at top right, rgba(236, 72, 153, 0.18), transparent 55%),
                        linear-gradient(120deg, #4f46e5, #ec4899);
        }

        .featured-card::before {
            content: "";
            position: absolute;
            inset: 0;
            border-radius: 28px;
            background: linear-gradient(160deg, rgba(15, 23, 42, 0.75), rgba(15, 23, 42, 0.55));
            opacity: 0.92;
        }
    </style>
}

<section class="blog-hero text-white rounded-[32px] shadow-2xl overflow-hidden mb-12">
    <div class="px-6 py-12 md:px-12 md:py-16 lg:px-20">
        <div class="max-w-3xl space-y-6">
            <div class="inline-flex items-center gap-2 bg-white/20 px-4 py-2 rounded-full text-sm font-semibold uppercase tracking-wide">
                <i class="fas fa-pen-nib text-yellow-200"></i>
                Blog BookVerse
            </div>
            <h1 class="text-4xl md:text-5xl font-black leading-tight">
                @pageTitle
            </h1>
            <p class="text-lg md:text-xl text-indigo-100/90 leading-relaxed">
                @pageDescription
            </p>
            <div class="flex flex-wrap items-center gap-3 text-sm font-semibold text-white/90">
                <span class="inline-flex items-center gap-2 rounded-full bg-white/20 px-4 py-2">
                    <i class="fas fa-calendar-alt"></i>
                    Cập nhật mỗi tuần
                </span>
                <span class="inline-flex items-center gap-2 rounded-full bg-white/20 px-4 py-2">
                    <i class="fas fa-book-reader"></i>
                    Mẹo đọc sách chất lượng
                </span>
            </div>
        </div>
    </div>
</section>

<section class="grid gap-10 lg:grid-cols-[1.7fr_1fr]">
    <div class="space-y-10">
        <div>
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-2xl font-bold text-gray-900">Bài viết nổi bật</h2>
                <a asp-controller="Books" asp-action="Bestseller" class="text-sm font-semibold text-indigo-600 hover:text-indigo-800 flex items-center gap-2">
                    Khám phá sách bán chạy
                    <i class="fas fa-arrow-right"></i>
                </a>
            </div>
            <div class="grid gap-6 md:grid-cols-2">
                @foreach (var post in Model.FeaturedPosts)
                {
                    var imageUrl = string.IsNullOrWhiteSpace(post.HeroImageUrl) ? "/images/blog/default-featured.jpg" : post.HeroImageUrl;
                    <article class="relative overflow-hidden rounded-[28px] shadow-2xl featured-card">
                        <img src="@imageUrl" alt="@post.Title" class="absolute inset-0 h-full w-full object-cover" />
                        <div class="relative p-8 flex flex-col justify-between h-full min-h-[340px]">
                            <div class="space-y-4">
                                <span class="inline-flex items-center gap-2 rounded-full bg-white/20 px-3 py-1 text-xs font-semibold uppercase tracking-wide">
                                    <i class="fas fa-folder-open"></i>
                                    @post.Category
                                </span>
                                <h3 class="text-2xl font-bold leading-tight">@post.Title</h3>
                                <p class="text-sm text-indigo-100/90 leading-relaxed">
                                    @post.Summary
                                </p>
                            </div>
                            <div class="mt-6 flex items-center justify-between text-sm text-indigo-100/80">
                                <span>
                                    <i class="fas fa-user-circle mr-2"></i>@post.Author
                                </span>
                                <span class="flex items-center gap-3">
                                    <span><i class="fas fa-clock mr-1"></i>@post.ReadTimeMinutes phút đọc</span>
                                    <span><i class="fas fa-calendar-day mr-1"></i>@post.FormattedPublishedDate</span>
                                </span>
                            </div>
                        </div>
                    </article>
                }
            </div>
        </div>

        <div>
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-2xl font-bold text-gray-900">Bài viết mới nhất</h2>
                <div class="text-sm text-gray-500">Luôn cập nhật thông tin đọc sách mỗi ngày</div>
            </div>
            <div class="space-y-6">
                @foreach (var post in Model.LatestPosts)
                {
                    var imageUrl = string.IsNullOrWhiteSpace(post.HeroImageUrl) ? "/images/blog/default-latest.jpg" : post.HeroImageUrl;
                    <article class="flex flex-col md:flex-row gap-4 rounded-2xl border border-gray-100 bg-white p-4 shadow-sm hover:shadow-lg transition-shadow">
                        <div class="w-full md:w-48 h-40 overflow-hidden rounded-xl">
                            <img src="@imageUrl" alt="@post.Title" class="h-full w-full object-cover" />
                        </div>
                        <div class="flex-1 space-y-3">
                            <div class="flex flex-wrap items-center gap-3 text-xs font-semibold uppercase tracking-wide text-indigo-500">
                                <span class="inline-flex items-center gap-2 bg-indigo-50 px-3 py-1 rounded-full text-indigo-600">
                                    <i class="fas fa-folder"></i>
                                    @post.Category
                                </span>
                                <span class="inline-flex items-center gap-2 text-gray-500">
                                    <i class="fas fa-clock"></i>
                                    @post.ReadTimeMinutes phút đọc
                                </span>
                            </div>
                            <h3 class="text-xl font-semibold text-gray-900">@post.Title</h3>
                            <p class="text-sm text-gray-600 leading-relaxed">@post.Summary</p>
                            <div class="flex flex-wrap items-center gap-4 text-xs text-gray-500">
                                <span class="inline-flex items-center gap-2">
                                    <i class="fas fa-user"></i>@post.Author
                                </span>
                                <span class="inline-flex items-center gap-2">
                                    <i class="fas fa-calendar"></i>@post.FormattedPublishedDate
                                </span>
                            </div>
                            <div class="flex flex-wrap gap-2">
                                @foreach (var tag in post.Tags)
                                {
                                    <span class="inline-flex items-center gap-2 rounded-full bg-gray-100 px-3 py-1 text-xs font-medium text-gray-600">
                                        <i class="fas fa-hashtag text-gray-400"></i>@tag
                                    </span>
                                }
                            </div>
                        </div>
                    </article>
                }
            </div>
        </div>
    </div>

    <aside class="space-y-8">
        <div class="rounded-3xl border border-gray-100 bg-white p-6 shadow-xl">
            <h3 class="text-lg font-bold text-gray-900">Chủ đề nổi bật</h3>
            <p class="mt-2 text-sm text-gray-500">Chọn chủ đề bạn yêu thích để khám phá thêm bài viết tương tự.</p>
            <div class="mt-4 flex flex-wrap gap-2">
                @foreach (var tag in Model.PopularTags)
                {
                    <a href="#" class="inline-flex items-center gap-2 rounded-full bg-indigo-50 px-3 py-1.5 text-xs font-semibold text-indigo-600 hover:bg-indigo-100">
                        <i class="fas fa-hashtag"></i>@tag
                    </a>
                }
            </div>
        </div>

        <div class="rounded-3xl border border-indigo-100 bg-indigo-50 p-6 shadow-inner">
            <h3 class="text-lg font-bold text-indigo-900">Bản tin BookVerse</h3>
            <p class="mt-2 text-sm text-indigo-800/80">Nhận thông báo về bài viết mới, ưu đãi và gợi ý sách phù hợp với bạn.</p>
            <form asp-controller="Home" asp-action="SubscribeNewsletter" method="post" class="mt-4 space-y-3">
                @Html.AntiForgeryToken()
                <input type="email" name="Email" placeholder="Email của bạn"
                       class="w-full rounded-xl border border-white/80 bg-white px-4 py-2.5 text-sm focus:border-indigo-400 focus:ring-2 focus:ring-indigo-200" required />
                <button type="submit" class="w-full rounded-xl bg-indigo-600 py-2.5 text-sm font-semibold text-white shadow-lg shadow-indigo-500/30 transition hover:bg-indigo-700">
                    Đăng ký ngay
                </button>
                <p class="text-xs text-indigo-700/70">Bằng việc đăng ký, bạn đồng ý với chính sách bảo mật của BookVerse.</p>
            </form>
        </div>

        <div class="rounded-3xl border border-gray-100 bg-white p-6 shadow-xl">
            <h3 class="text-lg font-bold text-gray-900">Từ khoá được tìm kiếm nhiều</h3>
            <ul class="mt-4 space-y-3 text-sm text-gray-600">
                <li class="flex items-center gap-2"><i class="fas fa-search text-gray-400"></i>Sách self-help 2024</li>
                <li class="flex items-center gap-2"><i class="fas fa-search text-gray-400"></i>Review sách văn học Việt</li>
                <li class="flex items-center gap-2"><i class="fas fa-search text-gray-400"></i>Phương pháp đọc sách nhanh</li>
                <li class="flex items-center gap-2"><i class="fas fa-search text-gray-400"></i>Sách thiếu nhi nổi bật</li>
            </ul>
        </div>
    </aside>
</section>