@model BookStoreMVC.Models.ViewModels.BlogIndexViewModel
@{
    var pageTitle = ViewBag.PageTitle as string ?? "Blog BookVerse";
    var pageDescription = ViewBag.MetaDescription as string
        ?? "Cập nhật những câu chuyện truyền cảm hứng và mẹo đọc sách thú vị mỗi ngày.";
    ViewData["Title"] = pageTitle;
}

@section Styles {
    <style>
       .blog-hero::before {
            content: "";
            position: absolute;
            inset: -30%;
            background:
                radial-gradient(circle at top left, rgba(255, 255, 255, 0.35), transparent 45%),
                radial-gradient(circle at bottom right, rgba(59, 130, 246, 0.35), transparent 55%),
                radial-gradient(circle at center, rgba(236, 72, 153, 0.3), transparent 60%);
            mix-blend-mode: screen;
            opacity: 0.7;
        }

        .featured-card::after {
            content: "";
            position: absolute;
            inset: 0;
            background: linear-gradient(120deg, rgba(15, 23, 42, 0.25), rgba(15, 23, 42, 0));
        }

        .blog-hero > * {
            position: relative;
            z-index: 1;
        }

        .sidebar-card {
            backdrop-filter: blur(6px);
        }
    </style>
}

<main class="mx-auto max-w-6xl space-y-12 px-4 sm:px-6 lg:px-8">
    <section class="blog-hero relative overflow-hidden rounded-[32px] bg-gradient-to-br from-indigo-600 via-purple-600 to-pink-500 px-6 py-12 text-white shadow-2xl sm:px-10 md:px-16 md:py-16">
        <div class="max-w-3xl space-y-6">
             <div class="inline-flex items-center gap-2 rounded-full bg-white/15 px-4 py-2 text-sm font-semibold uppercase tracking-wide backdrop-blur">
                <i class="fas fa-pen-nib text-yellow-200"></i>
                Blog BookVerse
            </div>
             <h1 class="text-4xl font-black leading-tight md:text-5xl">
                @pageTitle
            </h1>
            <p class="text-lg leading-relaxed text-indigo-50/90 md:text-xl">
                @pageDescription
            </p>
            <div class="flex flex-wrap items-center gap-3 text-sm font-semibold text-white/90">
                <span class="inline-flex items-center gap-2 rounded-full bg-white/15 px-4 py-2 backdrop-blur">
                    <i class="fas fa-calendar-alt"></i>
                    Cập nhật mỗi tuần
                </span>
                 <span class="inline-flex items-center gap-2 rounded-full bg-white/15 px-4 py-2 backdrop-blur">
                    <i class="fas fa-book-reader"></i>
                    Mẹo đọc sách chất lượng
                </span>
            </div>
        </div>
    </div>
</section>
  <section class="grid gap-12 lg:grid-cols-[1.7fr_1fr]">
        <div class="space-y-10">
            <div>
                <div class="mb-6 flex items-center justify-between">
                    <h2 class="text-2xl font-bold text-gray-900">Bài viết nổi bật</h2>
                    <a asp-controller="Books" asp-action="Bestseller" class="flex items-center gap-2 text-sm font-semibold text-indigo-600 transition hover:text-indigo-800">
                        Khám phá sách bán chạy
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
                <div class="grid gap-6 md:grid-cols-2">
                    @foreach (var post in Model.FeaturedPosts)
                    {
                        var imageUrl = string.IsNullOrWhiteSpace(post.HeroImageUrl) ? "/images/blog/default-featured.jpg" : post.HeroImageUrl;
                        <article class="group relative overflow-hidden rounded-[28px] border border-slate-100 bg-white shadow-xl transition duration-300 hover:-translate-y-1 hover:shadow-2xl">
                            <div class="relative h-52 overflow-hidden">
                                <img src="@imageUrl" alt="@post.Title" class="h-full w-full object-cover transition duration-500 group-hover:scale-105" />
                                <span class="absolute left-4 top-4 inline-flex items-center gap-2 rounded-full bg-white/90 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-indigo-600 shadow">

                                    <i class="fas fa-folder-open"></i>
                                    @post.Category
                                </span>
                              
                            </div>
                             <div class="flex h-full flex-col gap-4 p-6">
                                <div class="space-y-3">
                                    <h3 class="text-2xl font-semibold text-slate-900">@post.Title</h3>
                                    <p class="text-sm leading-relaxed text-slate-600">
                                        @post.Summary
                                    </p>
                                </div>
                                <div class="mt-auto flex items-center justify-between text-xs font-medium text-slate-500">
                                    <span class="inline-flex items-center gap-2">
                                        <i class="fas fa-user-circle text-indigo-500"></i>@post.Author
                                    </span>
                                    <div class="flex items-center gap-4">
                                        <span class="inline-flex items-center gap-1">
                                            <i class="fas fa-clock"></i>@post.ReadTimeMinutes phút đọc
                                        </span>
                                        <span class="inline-flex items-center gap-1">
                                            <i class="fas fa-calendar-day"></i>@post.FormattedPublishedDate
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </article>
                }
            </div>
        </div>
        
           <div>
                <div class="mb-6 flex items-center justify-between">
                    <h2 class="text-2xl font-bold text-gray-900">Bài viết mới nhất</h2>
                    <div class="text-sm text-gray-500">Luôn cập nhật thông tin đọc sách mỗi ngày</div>
                </div>
                <div class="space-y-6">
                    @foreach (var post in Model.LatestPosts)
                    {
                        var imageUrl = string.IsNullOrWhiteSpace(post.HeroImageUrl) ? "/images/blog/default-latest.jpg" : post.HeroImageUrl;
                        <article class="flex flex-col gap-4 rounded-2xl border border-gray-100 bg-white/90 p-5 shadow-sm transition duration-300 hover:-translate-y-0.5 hover:border-indigo-100 hover:shadow-lg md:flex-row">
                            <div class="h-44 w-full overflow-hidden rounded-xl md:w-48">
                                <img src="@imageUrl" alt="@post.Title" class="h-full w-full object-cover transition duration-500 hover:scale-105" />
                            </div>
                            <div class="flex flex-1 flex-col gap-3">
                                <div class="flex flex-wrap items-center gap-3 text-xs font-semibold uppercase tracking-wide text-indigo-500">
                                    <span class="inline-flex items-center gap-2 rounded-full bg-indigo-50 px-3 py-1 text-indigo-600">
                                        <i class="fas fa-folder"></i>
                                        @post.Category
                                    </span>
                                    <span class="inline-flex items-center gap-2 text-gray-500">
                                        <i class="fas fa-clock"></i>
                                        @post.ReadTimeMinutes phút đọc
                                    </span>
                                </div>
                                <h3 class="text-xl font-semibold text-gray-900">@post.Title</h3>
                                <p class="text-sm leading-relaxed text-gray-600">@post.Summary</p>
                                <div class="flex flex-wrap items-center gap-4 text-xs text-gray-500">
                                    <span class="inline-flex items-center gap-2">
                                        <i class="fas fa-user"></i>@post.Author
                                    </span>
                                    <span class="inline-flex items-center gap-2">
                                        <i class="fas fa-calendar"></i>@post.FormattedPublishedDate
                                    </span>
                                </div>
                                <div class="flex flex-wrap gap-2">
                                    @foreach (var tag in post.Tags)
                                    {
                                        <span class="inline-flex items-center gap-2 rounded-full bg-gray-100 px-3 py-1 text-xs font-medium text-gray-600">
                                            <i class="fas fa-hashtag text-gray-400"></i>@tag
                                        </span>
                                    }
                                </div>
                            </div>
                        </article>
                    }
                </div>
            </div>
        </div>

   
        <aside class="space-y-8">
            <div class="sidebar-card rounded-3xl border border-indigo-100 bg-white/70 p-6 shadow-xl">
                <h3 class="text-lg font-bold text-gray-900">Chủ đề nổi bật</h3>
                <p class="mt-2 text-sm text-gray-500">Chọn chủ đề bạn yêu thích để khám phá thêm bài viết tương tự.</p>
                <div class="mt-4 flex flex-wrap gap-2">
                    @foreach (var tag in Model.PopularTags)
                    {
                        <a href="#" class="inline-flex items-center gap-2 rounded-full bg-indigo-50 px-3 py-1.5 text-xs font-semibold text-indigo-600 transition hover:bg-indigo-100">
                            <i class="fas fa-hashtag"></i>@tag
                        </a>
                    }
                </div>
            </div>

        <div class="rounded-3xl border border-indigo-100 bg-indigo-50/90 p-6 shadow-inner">
                <h3 class="text-lg font-bold text-indigo-900">Bản tin BookVerse</h3>
                <p class="mt-2 text-sm text-indigo-800/80">Nhận thông báo về bài viết mới, ưu đãi và gợi ý sách phù hợp với bạn.</p>
                <form asp-controller="Home" asp-action="SubscribeNewsletter" method="post" class="mt-4 space-y-3">
                    @Html.AntiForgeryToken()
                    <input type="email" name="Email" placeholder="Email của bạn"
                           class="w-full rounded-xl border border-white/80 bg-white px-4 py-2.5 text-sm shadow-sm transition focus:border-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-200"
                           required />
                    <button type="submit" class="w-full rounded-xl bg-indigo-600 py-2.5 text-sm font-semibold text-white shadow-lg shadow-indigo-500/30 transition hover:bg-indigo-700">
                        Đăng ký ngay
                    </button>
                    <p class="text-xs text-indigo-700/70">Bằng việc đăng ký, bạn đồng ý với chính sách bảo mật của BookVerse.</p>
                </form>
            </div>

        <div class="rounded-3xl border border-gray-100 bg-white p-6 shadow-xl">
                <h3 class="text-lg font-bold text-gray-900">Từ khoá được tìm kiếm nhiều</h3>
                <ul class="mt-4 space-y-3 text-sm text-gray-600">
                    <li class="flex items-center gap-2"><i class="fas fa-search text-gray-400"></i>Sách self-help 2024</li>
                    <li class="flex items-center gap-2"><i class="fas fa-search text-gray-400"></i>Review sách văn học Việt</li>
                    <li class="flex items-center gap-2"><i class="fas fa-search text-gray-400"></i>Phương pháp đọc sách nhanh</li>
                    <li class="flex items-center gap-2"><i class="fas fa-search text-gray-400"></i>Sách thiếu nhi nổi bật</li>
                </ul>
            </div>
        </aside>
    </section>
</main>