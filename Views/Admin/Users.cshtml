@* Views/Admin/Users.cshtml *@
@model IEnumerable<BookStoreMVC.Models.Entities.User>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Quản lý người dùng";
    ViewBag.PageTitle = "Quản lý người dùng";
    ViewBag.ActiveMenu = "Users";
}

<!-- Page Header -->
<div class="mb-6">
    <div class="sm:flex sm:items-center sm:justify-between">
        <div>
            <h2 class="text-2xl font-bold text-gray-900 mb-2">
                <i class="fas fa-users text-primary-600 mr-3"></i>
                Quản lý người dùng
            </h2>
            <p class="text-sm text-gray-600">
                Tổng cộng: <span class="font-semibold text-primary-600">@Model.Count()</span> người dùng
            </p>
        </div>
    </div>
</div>

<!-- Quick Stats -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-xs font-medium text-gray-600 uppercase">Tổng số</p>
                <p class="text-2xl font-bold text-gray-900 mt-1">@Model.Count()</p>
            </div>
            <div class="p-3 bg-blue-100 rounded-lg">
                <i class="fas fa-users text-blue-600 text-xl"></i>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-xs font-medium text-gray-600 uppercase">Hoạt động</p>
                <p class="text-2xl font-bold text-green-600 mt-1">@Model.Count(u => u.LockoutEnd == null || u.LockoutEnd < DateTimeOffset.UtcNow)</p>
            </div>
            <div class="p-3 bg-green-100 rounded-lg">
                <i class="fas fa-user-check text-green-600 text-xl"></i>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-xs font-medium text-gray-600 uppercase">Bị khóa</p>
                <p class="text-2xl font-bold text-red-600 mt-1">@Model.Count(u => u.LockoutEnd.HasValue && u.LockoutEnd > DateTimeOffset.UtcNow)</p>
            </div>
            <div class="p-3 bg-red-100 rounded-lg">
                <i class="fas fa-user-lock text-red-600 text-xl"></i>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-xs font-medium text-gray-600 uppercase">Mới (30 ngày)</p>
                <p class="text-2xl font-bold text-purple-600 mt-1">@Model.Count(u => u.CreatedAt >= DateTime.UtcNow.AddDays(-30))</p>
            </div>
            <div class="p-3 bg-purple-100 rounded-lg">
                <i class="fas fa-user-plus text-purple-600 text-xl"></i>
            </div>
        </div>
    </div>
</div>

<!-- Search Section -->
<div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-6">
    <div class="p-6">
        <form method="get" class="flex gap-4">
            <div class="flex-1">
                <input type="text" name="searchTerm" placeholder="Tìm kiếm theo tên, email..."
                       class="block w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
            </div>
            <button type="submit" 
                    class="px-6 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors">
                <i class="fas fa-search mr-2"></i>Tìm kiếm
            </button>
        </form>
    </div>
</div>

<!-- Users Table -->
<div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
    @if (Model != null && Model.Any())
    {
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Người dùng
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Email
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Số điện thoại
                        </th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Ngày tạo
                        </th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Trạng thái
                        </th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Thao tác
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var user in Model)
                    {
                        var isLocked = user.LockoutEnd.HasValue && user.LockoutEnd > DateTimeOffset.UtcNow;
                        <tr class="hover:bg-gray-50 transition-colors">
                            <td class="px-6 py-4">
                                <div class="flex items-center">
                                    <div class="w-10 h-10 bg-primary-100 rounded-full flex items-center justify-center">
                                        <span class="text-sm font-semibold text-primary-600">
                                            @(user.Name?.Substring(0, 1).ToUpper() ?? "?")
                                        </span>
                                    </div>
                                    <div class="ml-4">
                                        <div class="text-sm font-medium text-gray-900">@user.Name</div>
                                        <div class="text-xs text-gray-500">ID: @(user.Id?.Length >= 8 ? user.Id.Substring(0, 8) : user.Id)</div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <div class="text-sm text-gray-900">@user.Email</div>
                                @if (user.EmailConfirmed)
                                {
                                    <span class="text-xs text-green-600">
                                        <i class="fas fa-check-circle mr-1"></i>Đã xác thực
                                    </span>
                                }
                                else
                                {
                                    <span class="text-xs text-gray-500">
                                        <i class="fas fa-times-circle mr-1"></i>Chưa xác thực
                                    </span>
                                }
                            </td>
                            <td class="px-6 py-4">
                                <div class="text-sm text-gray-900">@(user.PhoneNumber ?? "N/A")</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center">
                                <div class="text-sm text-gray-900">@user.CreatedAt.ToString("dd/MM/yyyy")</div>
                                <div class="text-xs text-gray-500">@user.CreatedAt.ToString("HH:mm")</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center">
                                @if (isLocked)
                                {
                                    <span class="px-3 py-1 inline-flex text-xs font-semibold rounded-full bg-red-100 text-red-800">
                                        <i class="fas fa-lock mr-1"></i>Đã khóa
                                    </span>
                                }
                                else
                                {
                                    <span class="px-3 py-1 inline-flex text-xs font-semibold rounded-full bg-green-100 text-green-800">
                                        <i class="fas fa-check mr-1"></i>Hoạt động
                                    </span>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center">
                                <div class="flex items-center justify-center space-x-2">
                                    <a href="@Url.Action("UserDetails", "Admin", new { id = user.Id })"
                                       class="inline-flex items-center justify-center w-8 h-8 rounded-full text-blue-600 hover:bg-blue-50 transition-colors"
                                       title="Xem chi tiết">
                                        <i class="fas fa-eye text-sm"></i>
                                    </a>
                                    <button onclick="toggleLockUser('@user.Id', @isLocked.ToString().ToLower())"
                                            class="inline-flex items-center justify-center w-8 h-8 rounded-full @(isLocked ? "text-green-600 hover:bg-green-50" : "text-red-600 hover:bg-red-50") transition-colors"
                                            title="@(isLocked ? "Mở khóa" : "Khóa tài khoản")">
                                        <i class="fas fa-@(isLocked ? "unlock" : "lock") text-sm"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="text-center py-12">
            <div class="mx-auto h-24 w-24 text-gray-400 mb-4">
                <i class="fas fa-users text-6xl"></i>
            </div>
            <h3 class="text-lg font-medium text-gray-900 mb-2">Không tìm thấy người dùng nào</h3>
            <p class="text-gray-500">Danh sách người dùng trống.</p>
        </div>
    }
</div>

@section Scripts {
    <script>
        function toggleLockUser(userId, isCurrentlyLocked) {
            const action = isCurrentlyLocked ? 'mở khóa' : 'khóa';
            
            if (!confirm(`Bạn có chắc chắn muốn ${action} tài khoản này?`)) {
                return;
            }

            // Implement AJAX call to toggle lock status
            $.ajax({
                url: '@Url.Action("ToggleLockUser", "Admin")',
                method: 'POST',
                data: {
                    userId: userId,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        alert(response.message);
                        window.location.reload();
                    } else {
                        alert(response.message);
                    }
                },
                error: function() {
                    alert('Có lỗi xảy ra!');
                }
            });
        }
    </script>
}